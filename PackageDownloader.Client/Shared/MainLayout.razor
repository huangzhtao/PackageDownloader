    <LayoutHeader>
        <NavMenu />
    </LayoutHeader>
    <LayoutContent>
        <Row>
            <Column ColumnSize="ColumnSize.Is2">
            </Column>
            <Column ColumnSize="ColumnSize.Is8">
                @Body
            </Column>
            <Column ColumnSize="ColumnSize.Is2">
            </Column>
        </Row>
    </LayoutContent>
    <LayoutFooter>
        <Row>
            <Column ColumnSize="ColumnSize.Is2">
            </Column>
            <Column ColumnSize="ColumnSize.Is8">
                &copy; huangzhtao  @DateTime.Now.ToString("yyyy-MM-dd")
            </Column>
            <Column ColumnSize="ColumnSize.Is2">
            </Column>
        </Row>
    </LayoutFooter>
